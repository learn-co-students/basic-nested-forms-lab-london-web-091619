
<%= form_for @recipe do |f| %>
    <%= f.label "Recipe title:" %>
    <%= f.text_field :title %><br><br>

    <%= f.fields_for :ingredients do |i_form| %>
        <%= i_form.label :name %>
        <%= i_form.text_field :name %><br><br>

        <%= i_form.label :quantity %>
        <%= i_form.text_field :quantity %><br><br>
    <% end %>

    <%= f.submit %>
<% end %>


